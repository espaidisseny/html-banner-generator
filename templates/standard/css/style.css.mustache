html, body { 
  margin: 0; 
  padding: 0; 
}

body { 
  width: {{WIDTH}}px; 
  height: {{HEIGHT}}px; 
  overflow: hidden; 
}

#banner {
  position: absolute;
  overflow: hidden;
  width: {{WIDTH}}px; 
  height: {{HEIGHT}}px; 
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  background: #ffffff;
  border: 1px solid #aaaaaa;
}
    
#cover {
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
}

#clickArea { 
  width: {{WIDTH}}px; 
  height: {{HEIGHT}}px; 
  position: absolute; 
}

.retina {
  width: {{WIDTH}}px; 
  height: {{HEIGHT}}px; 
  position: absolute;
  top: 0;
  left: 0;
  background-repeat: no-repeat;
  background-size: contain;
  transform: rotate(0.02deg);
  transform-style: preserve-3d;
}

{{#ASSETS}}
#{{id}}{
  background-image: url("../assets/{{file}}");
}
{{/ASSETS}}
