@font-face
  font-family 'Ebro'
      url('../fonts/Ebro-Regular.otf') format('opentype')
  font-weight 400
  font-style normal

@font-face
  font-family 'Ebro'
      url('../fonts/Ebro-Bold.otf') format('opentype')
  font-weight 700
  font-style normal


width = 300px
height = 600px

bg_img(id,ext)
  #{id}
    path = '../images/'+id+'.'+ext
    background-image url(path)
    width image-size(path)[0]
    height image-size(path)[1]
    background-repeat no-repeat
    position absolute
    top 0px
    -webkit-transform: scale(1);
    -moz-transform: scale(1);
    -o-transform: scale(1);
    -ms-transform: scale(1);
    transform: rotate(0.02deg)
    transform-style preserve-3d
    {block}

bg_img_retina(id,ext)
  #{id}
    path = '../images/'+id+'.'+ext
    background-image url(path)
    background-repeat no-repeat
    position absolute
    -webkit-transform: scale(1);
    -moz-transform: scale(1);
    -o-transform: scale(1);
    -ms-transform: scale(1);
    transform: rotate(0.02deg)
    transform-style preserve-3d
    {block}

body
    margin 0
    padding 0
    overflow hidden

#banner
    position absolute
    overflow hidden
    width width
    height height
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    background #f5f3eb
    border 1px solid #aaaaaa

#cover
    display block
    position absolute
    width 100%
    height 100%
    background #f5f3eb

.retina
    background-size contain
    width width
    height height
    top 0px
    left 0px

.retinaCover
    background-size cover
    width width
    height height
    top 0px
    left 0px

